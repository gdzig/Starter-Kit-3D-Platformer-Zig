[
  {
    "label": "Build",
    "command": "zig build",
    "reveal_target": "dock",
    "reveal": "always",
    "use_new_terminal": false
  },
  {
    "label": "Run",
    "command": "zig build run",
    "reveal_target": "dock",
    "use_new_terminal": false
  },
  {
    "label": "Run Tests",
    "command": "zig build test",
    "reveal_target": "dock",
    "reveal": "always",
    "use_new_terminal": false
  },
  {
    "label": "Open Editor",
    "command": "godot",
    "args": ["--editor"],
    "cwd": "${ZED_WORKTREE_ROOT}/project",
    "reveal_target": "dock",
    "reveal": "never",
    "use_new_terminal": false
  }
]
